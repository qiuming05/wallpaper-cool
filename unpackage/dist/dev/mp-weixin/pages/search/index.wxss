.main {
  padding: 0 15px;
}
.main .search {
  padding-top: 25rpx;
}
.main .searchHistory,
.main .searchGuess {
  margin: 15px 0;
}
.main .searchHistory .header {
  display: flex;
  justify-content: space-between;
}
.main .title {
  font-size: 18px;
}
.main .tabs {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding-top: 30rpx;
}
.main .tabs .tab-item {
  font-size: 14px;
  background-color: #F5F6F8;
  color: #909399;
  border-radius: 40rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
  text-align: center;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

