.movable-area {
  position: fixed;
  z-index: 99999;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}
.movable-area .movable-view {
  width: 100vw;
  height: 100vh;
  justify-content: center;
  /*子元素水平居中*/
  align-items: center;
  /*子元素垂直居中*/
  display: -webkit-flex;
}
.movable-area .movable-view .swiperImg {
  height: 80%;
}
.bottom {
  position: fixed;
  right: 0;
  left: 0;
  margin: 0 auto;
  width: 65%;
  height: 52px;
  box-shadow: 0 0px 8px rgba(0, 0, 0, 0.06);
  background: rgba(0, 0, 0, 0.94);
  border-radius: 32rpx;
  z-index: 10;
  opacity: 0.8;
}
.bottom .num {
  position: absolute;
  top: -70rpx;
  left: 50%;
  background: rgba(0, 0, 0, 0.6);
  color: #FFF;
  padding: 4rpx 20rpx;
  font-size: 12px;
  border-radius: 36px;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.nav-tab {
  position: relative;
  width: 100%;
  height: 52px;
  font-size: 12px;
  color: #D8D8D8;
  font-weight: 400;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-box {
  /* position: absolute; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  box-sizing: border-box;
}
.openCss {
  -webkit-animation-name: openLinear;
          animation-name: openLinear;
  -webkit-animation-duration: 0.8s;
          animation-duration: 0.8s;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
  bottom: 40px;
}
@-webkit-keyframes openLinear {
0% {
    -webkit-transform: translateY(92px);
            transform: translateY(92px);
}
100% {
    -webkit-transform: translateY(0px);
            transform: translateY(0px);
}
}
@keyframes openLinear {
0% {
    -webkit-transform: translateY(92px);
            transform: translateY(92px);
}
100% {
    -webkit-transform: translateY(0px);
            transform: translateY(0px);
}
}
.closeCss {
  -webkit-animation-name: closeLinear;
          animation-name: closeLinear;
  -webkit-animation-duration: 0.8s;
          animation-duration: 0.8s;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
  bottom: -52px;
}
@-webkit-keyframes closeLinear {
0% {
    -webkit-transform: translateY(-92px);
            transform: translateY(-92px);
}
100% {
    -webkit-transform: translateY(0px);
            transform: translateY(0px);
}
}
@keyframes closeLinear {
0% {
    -webkit-transform: translateY(-92px);
            transform: translateY(-92px);
}
100% {
    -webkit-transform: translateY(0px);
            transform: translateY(0px);
}
}
.u-indicator-item-number {
  padding: 6rpx 16rpx;
